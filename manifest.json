{
  "name": "突然の綾瀬はるか",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "突然綾瀬はるかが出てきます",
   "icons": {
      "128": "icon128.png",
      "48": "icon48.png",
      "16": "icon16.png"
   },
  "web_accessible_resources": [
    "test.html"
  ],
  "permissions": [
    "alarms",
    "tabs",
    "notifications",
    "http://image.search.yahoo.co.jp/*"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "突然の綾瀬はるか",
    "default_icon": "icon48.png",
    "default_popup": "option.html"
  },
  "options_page": "option.html"
}
